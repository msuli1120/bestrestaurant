{% include 'header.html.twig' %}
  <h4>You want to update this review: {{ review.getReview }}</h4>

  <form action="/review/{{ review.getId }}" method="post">
    <input name="_method" type="hidden" value="patch">

    <label for="review">Enter your new review:</label>
    <input id="review" name="review" type="text">
    <button type="submit">Update</button>
  </form>

  <form action="/review/{{ review.getId }}" method="post">
    <input name="_method" type="hidden" value="delete">
    <button class="btn bg-danger" type="submit">Delete this review</button>
  </form>

